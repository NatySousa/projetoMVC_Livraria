  @model Projeto_Estudo_MVC.Models.LivroEdicaoModel
@{
    ViewData["Title"] = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Atualização de Livros</h3>

<p>
    Utilize o formulário para alterar o livro.
</p>
<hr />
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-secondary mb-2">
        <strong>@TempData["Mensagem"]</strong>
    </div>
}

@using (Html.BeginForm())
{
    <!-- campo oculto -->
    @Html.HiddenFor(model => model.IdLivro)

    <label>Nome do livro:</label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />

    <label>Preço do livro:</label>
    @Html.TextBoxFor(model => model.Preco, new { @class = "form-control" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Preco)
    </div>
    <br />

    <label>Quantidade do livro:</label>
    @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Quantidade)
    </div>
    <br />

    <input type="submit" value="Salvar Alterações"
           class="btn btn-primary"/>
}



  